<%- include('../../partials/header.ejs'); %>
<body style="background-color: lightgray;">
    <div class="container" style="margin-top: 10%;">
       <div class="card" style="border: gray; border-style: solid; border-width: 1px;">
           <div class="card-header">
                <h2>Entrar</h2>
           </div>
           <div class="card-body">
                <form method="POST" action="/authenticate">
                    <input type="email" class="form-control mt-2" style="margin-top: -5px !important;" name="email" id="email" placeholder="E-mail">
                    <input type="password" class="form-control mt-2" name="password" id="password" placeholder="Senha">
                    <button type="submit" class="btn btn-success mt-2 btn-block">Entrar</button>
                </form>
                <form method="GET" action="/logout">
                    <button type="submit" class="btn btn-danger mt-2 btn-block">Cancelar</button>
                </form>
           </div>
       </div>
    </div>
</body:>
